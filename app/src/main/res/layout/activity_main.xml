<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.app.ui.MainActivity">

    <com.app.widget.Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        app:spotPadding="3dip"/>

    <com.app.widget.Switch
        android:layout_marginTop="12dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch2"
        app:spotOffColor="#f7f5f1"
        app:spotOnColor="@color/colorAccent"
        app:switchOffColor="#dadada"
        app:switchOnColor="@color/colorPrimary" />

    <com.app.widget.Switch
        android:layout_marginTop="12dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch3"
        app:switchValue="true"
        app:spotOnColor="@color/colorPrimary"
        app:switchOnColor="#483F51B5"/>

    <com.app.widget.Switch
        android:layout_marginTop="12dip"
        android:layout_width="120dip"
        android:layout_height="72dip"
        app:spotOffColor="#f7f5f1"
        app:spotOnColor="#ff4081"
        app:switchOffColor="#dadada"
        app:switchOnColor="#48ff4081"
        app:spotPadding="2dip"
        app:switchValue="true"
        />

</LinearLayout>
